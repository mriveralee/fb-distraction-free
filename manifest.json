{
  "name": "FB Distraction Free",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Hides the News Feed, Trending Topics, and Side Bar UI Counts on Facebook",
  "homepage_url": "https://github.com/mriveralee/fb-distraction-free",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.facebook.com/*",
        "http://*.facebook.com/*"
      ],
      "js": [
        "src/inject/jquery.min.js",
        "src/inject/inject.js"
      ]
    }
  ]
}
